<div class="row justify-content-center mt-4">
  <div class="col-6">
    <h1 class="mb-4"><%= @restaurant.name %></h1>
    <div class="d-flex">
      <h2 class="fs-3 fw-normal">Address:</h2>
      <p class="fs-4 fw-light ps-2"><%= @restaurant.address %></p>
    </div>
    <div class="d-flex">
      <h2 class="fs-3 fw-normal">Phone number:</h2>
      <p class="fs-4 fw-light ps-2"><%= @restaurant.phone_number %></p>
    </div>
    <div class="d-flex">
      <h2 class="fs-3 fw-normal">Category:</h2>
      <p class="fs-4 fw-light ps-2"><%= @restaurant.category %></p>
    </div>
    <h2 class="fs-3 fw-normal">Reviews:</h2>
    <ul class="list-group list-group-flush mt-4">
      <% @restaurant.reviews.each do |review| %>
        <p class="list-group-item"><%= review.content %> | <%= review.rating %>/5</p>
      <% end %>
    </ul>
    <div class="d-flex">
      <%= link_to "Back to list", restaurants_path, class: "btn btn-dark mt-4" %>
      <%= link_to "Add a new review", new_restaurant_review_path(@restaurant), class: "btn btn-dark mt-4 ms-4" %>
    </div>
  </div>
</div>
