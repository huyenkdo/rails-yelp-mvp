<div class="row justify-content-center mt-4">
  <div class="col-6">
    <h1 class="mb-4">Add a new review for <%= @restaurant.name %></h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, :collection => 0..5 %>
      <%= f.submit "Submit review", class: "btn btn-outline-secondary" %>
    <% end %>
    <%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-dark mt-4" %>
  </div>
</div>
